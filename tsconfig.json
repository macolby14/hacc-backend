{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "rootDir": "./",
        "outDir": "./build",
        "esModuleInterop": true,
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        },
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "ormconfig.js"]
}